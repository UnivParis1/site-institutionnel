{#
/**
 * @file
 * Bootstrap Paragraphs template for displaying a Two Columns Uneven layout.
 *
 * Available variables:
 * - paragraph: Full paragraph entity.
 *   - id: The paragraph ID.
 *   - bundle: The type of the paragraph, for example, "image" or "text".
 *   - authorid: The user ID of the paragraph author.
 *   - createdtime: Formatted creation date. Preprocess functions can
 *     reformat it by calling format_date() with the desired parameters on
 *     $variables['paragraph']->getCreatedTime().
 * - content: All paragraph items. Use {{ content }} to print them all,
 *   or print a subset such as {{ content.field_example }}. Use
 *   {{ content|without('field_example') }} to temporarily suppress the printing
 *   of a given child element.
 * - attributes: HTML attributes for the containing element.
 *   The attributes.class element may contain one or more of the following
 *   classes:
 *   - paragraphs: The current template type (also known as a "theming hook").
 *   - paragraphs--type-[type]: The current paragraphs type. For example, if the paragraph is an
 *     "Image" it would result in "paragraphs--type--image". Note that the machine
 *     name will often be in a short form of the human readable label.
 *   - paragraphs--view-mode--[view_mode]: The View Mode of the paragraph; for example, a
 *     preview would result in: "paragraphs--view-mode--preview", and
 *     default: "paragraphs--view-mode--default".
 * - view_mode: View mode; for example, "preview" or "full".
 * - logged_in: Flag for authenticated user status. Will be true when the
 *   current user is a logged-in member.
 * - is_admin: Flag for admin user status. Will be true when the current user
 *   is an administrator.
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}
{# The template default set classes. #}
{%
  set classes = [
  'paragraph',
  paragraph.bundle|clean_class,
  'cell',
  'small-12',
]
%}

{# Set width of the paragraph #}
{% if content.bp_width|render %}
  {% set layout_width = content.bp_width['#items'].getString() %}
  {% set layout_width_classes = [
    'paragraph--width--tiny' == layout_width ? 'large-6 large-offset-3',
    'paragraph--width--narrow' == layout_width ? 'large-8 large-offset-2',
    'paragraph--width--medium' == layout_width ? 'large-10 large-offset-1'
  ]
  %}
  {% set classes = classes|merge(layout_width_classes) %}
{% endif %}

{#Set Background of the paragraph #}
{% if content.bp_background|render %}
  {% set background_field = content.bp_background|render %}
  {% set layout_background = content.bp_background['#items'].getString() %}
  {% set layout_background_classes = [
    'paris1-bg-soft-grey' == layout_background ? 'paragraph--color paris1-bg-soft-grey',
    'paris1-bg-blue' == layout_background ? 'paragraph--color paris1-bg-blue',
  ]
  %}
{% endif %}

{# Renders Column Style field. #}
{# Sets class name from values in database. #}
{% if content.bp_column_style_3|render %}
  {% set column_style_3 = content.bp_column_style_3['#items'].getString() %}
  {% set column_style_3_classes = [
    'paragraph--style--25-50-25' == column_style_3 ? 'col-25-50-25',
    'paragraph--style--50-25-25' == column_style_3 ? 'col-50-25-25',
    'paragraph--style--25-25-50' == column_style_3 ? 'col-25-25-50',
    'paragraph--style--16-66-16' == column_style_3 ? 'col-16-66-16',
    'paragraph--style--66-16-16' == column_style_3 ? 'col-66-16-16',
    'paragraph--style--16-16-66' == column_style_3 ? 'col-16-16-66',
  ]
  %}
  {% set classes = classes|merge(column_style_3_classes) %}

  {% if column_style_3 == 'paragraph--style--25-50-25' %}
    {% set first_col = 'small-12 medium-3 large-3' %}
    {% set sec_col = 'small-12 medium-6 large-6' %}
    {% set third_col = 'small-12 medium-3 large-3' %}

  {% elseif column_style_3 == 'paragraph--style--50-25-25' %}
    {% set first_col = 'small-12 medium-6 large-6' %}
    {% set sec_col = 'small-12 medium-3 large-3' %}
    {% set third_col = 'small-12 medium-3 large-3' %}

  {% elseif column_style_3 == 'paragraph--style--25-25-50' %}
    {% set first_col = 'small-12 medium-3 large-3' %}
    {% set sec_col = 'small-12 medium-3 large-3' %}
    {% set third_col = 'small-12 medium-6 large-6' %}

  {% elseif column_style_3 == 'paragraph--style--16-66-16' %}
    {% set first_col = 'small-12 medium-2 large-2' %}
    {% set sec_col = 'small-12 medium-8 large-8' %}
    {% set third_col = 'small-12 medium-2 large-2' %}

  {% elseif column_style_3 == 'paragraph--style--66-16-16' %}
    {% set first_col = 'small-12 medium-8 large-8' %}
    {% set sec_col = 'small-12 medium-2 large-2' %}
    {% set third_col = 'small-12 medium-2 large-2' %}

  {% elseif column_style_3 == 'paragraph--style--16-16-66' %}
    {% set first_col = 'small-12 medium-2 large-2' %}
    {% set sec_col = 'small-12 medium-2 large-2' %}
    {% set third_col = 'small-12 medium-8 large-8' %}
  {% endif %}
{% endif %}

{% if background_field %}
<div class="{{ layout_background_classes|join(' ') }}">
  {% endif %}
  <div{{ attributes.addClass(classes) }}>
    <div class="grid-container">
      <div class="grid-x grid-margin-x">
        {% if content.field_title|render %}
          <div class="cell small-12 no-margin-top-bottom">
            <h2 class="titre">{{ content.field_title.0 }}</h2>
          </div>
        {% endif %}
        <div class="cell small-12 column-uneven-wrapper">
          {% for key, column in content.bp_column_content_3 if key|first != '#' %}
            <div class="{% if key == 0 %}{{ first_col }}{% elseif key == 1 %}{{ sec_col }}{% else %}{{ third_col }}{% endif %}">
              {{ column }}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  {% if background_field %}
</div>
{% endif %}
