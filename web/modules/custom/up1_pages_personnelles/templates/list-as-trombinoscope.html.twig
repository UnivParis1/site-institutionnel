{% if affiliation == 'faculty' %}
  {% set category = "Enseignants-Chercheurs" %}
{% endif %}

<div id="trombi" class="cell small-12">
  <div class="grid-x grid-margin-x grid-margin-y">
    <div class="grid-container">
      {% if users|length < 1 %}
        <h4>{{ "Aucun résultat n'a été trouvé."|t }}</h4>
      {% else %}
        <div class="annuaire-content mb-5">
          {% for user in users %}
            {% if user.labeledURI is not empty and ((Trusted and user.supannListeRouge == FALSE) or
              (not Trusted and user.sn != 'supannListeRouge')) %}
              <div class="annuaire-item">
                <b>
                  <a href="{{ user.labeledURI[0] }}"  target="_blank"
                     title="{{ "Page personnelle de"|t }} {{ user.givenName }} {{ user.sn|upper }}">
                    {{ user.sn|upper }} {{ user.givenName }}
                  </a>
                </b>
                {% set supannRole = user.supannRoleEntite-all %}
                {% for supannRole as role %}
                  <span>
                    {{ role }} {{ role.structure.description }}
                  </span>
                {% endfor %}
                {% set supannAffec = user.supannEntiteAffectation-all %}
                {% for supannAffec as affec %}
                  <span>
                    {{ affec.businessCategory }}{{ affec.description }}
                  </span>
                {% endfor %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>
