{% if affiliation == 'faculty' %}
  {% set category = "Enseignants-Chercheurs" %}
{% else %}
  {% set category = "Doctorants" %}
{% endif %}

<div id="liste-page-perso" class="cell small-12">
  <div class="grid-x grid-margin-x grid-margin-y">
    <div class="grid-container">
      <div class="pager pager-top">
        {% for letter in 'a'|upper .. 'z'|upper %}
          <span class="letter">
            {% if affiliation == 'faculty' %}
              <a href="{{ path('micro_annuaire_sorbonne.annuaire_controller_faculty_list',
                {'letter': letter}
              )}}">{{ letter }}</a>
              {% else %}
              {% set category = "Doctorants" %}
              <a href="{{ path('micro_annuaire_sorbonne.annuaire_controller_student_list',
                {'letter': letter}
              )}}">{{ letter }}</a>
            {% endif %}
          </span>
        {% endfor %}
      </div>

      <h3>{{ category|upper }}</h3>
      <hr />
      {% if users|length < 1 %}
        <h4>{{ "Il n'y a personne Ã  cette lettre dans cet annuaire"|t }}</h4>
      {% else %}
        <div class="annuaire-content mb-5">
          {% for user in users %}
            {% if (Trusted and user.supannListeRouge == FALSE) or (not Trusted and user.sn != 'supannListeRouge') %}
              <div class="annuaire-item">
                <div>
                  <b>
                    {% if user.labeledURI is empty %}
                      {{ user.sn|upper }} {{ user.givenName }}
                    {% else %}
                      <a href="{{ user.labeledURI[0] }}">
                        {{ user.sn|upper }} {{ user.givenName }}
                      </a>
                    {% endif %}
                  </b>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}

      <div class="pager pager-top">
        {% for letter in 'a'|upper .. 'z'|upper %}
          <span class="letter">
              {% if affiliation == 'faculty' %}
                <a href="{{ path('micro_annuaire_sorbonne.annuaire_controller_faculty_list',
                  {'letter': letter}
                )}}">{{ letter }}</a>
              {% else %}
                <a href="{{ path('micro_annuaire_sorbonne.annuaire_controller_student_list',
                  {'letter': letter}
                )}}">{{ letter }}</a>
              {% endif %}
            </span>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
