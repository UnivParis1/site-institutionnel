/**
 * Migrate publisher & collections data from text field to
 * entity_reference field on publication node.
 */
function up1_global_update_8103() {
  $ids = \Drupal::entityQuery('node')
    ->condition('type', 'publication')
    ->execute();
  $publications = Node::loadMultiple($ids);
  if (!empty($publications)) {
    foreach ($publications as $publication) {
      $taxonomyEntity = \Drupal::entityTypeManager()
        ->getStorage('taxonomy_term');
      //Migrate field_collection
      $field_collection = trim($publication->get('field_collection')->getValue());
      if (isset($field_collection) && $field_collection != '') {
        $voc_collections = "collections";
        $term_collection = $taxonomyEntity->loadByProperties([
          'name' => $field_collection,
          'vid' => $voc_collections
        ]);
        if (!empty($term_collection)) {
          $term = reset($term_collection);
        } else {
          $term_collection = Term::create([
            'name' => trim($field_collection),
            'vid' => $voc_collections,
          ]);
          $term_collection->save();
        }
      }
      //Migrate field_publisher
      $field_publisher = trim($publication->get('field_collection')->getValue());
      if (isset($field_publisher) && $field_publisher != '') {
        $voc_publishers = "publishers";

        $term_publisher = $taxonomyEntity->loadByProperties([
          'name' => $field_publisher,
          'vid' => $voc_publishers
        ]);
        if (!empty($term_publisher)) {
          $term_publisher = reset($term_publisher);
        }
        else {
          $term_publisher = Term::create([
            'name' => trim($field_publisher),
            'vid' => $voc_publishers,
          ]);
          $term_publisher->save();
        }
      }
      if (isset($term_publisher) || isset($term_collection)) {
        if (isset($term_publisher)) {
          $publication->set('field_publisher_term', $term_publisher);
        }
        if (isset($term_collection)) {
          $publication->set('field_collection_term', $term_collection);
        }
        $publication->save();
      }
    }
  }
}
